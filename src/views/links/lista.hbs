<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">                 
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p>{{descripcion}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="links/eliminar/{{id}}" class="btn btn-danger">Eliminar</a>
                        <a href="links/editar/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-med-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay links guardados</p>
                    <a href="links/add">Crea uno</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>